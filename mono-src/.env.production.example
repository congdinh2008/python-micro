# Production Environment Configuration Example
# IMPORTANT: Copy this file to .env and update with your production values

# ============================================
# CORS Configuration (CRITICAL FOR SECURITY)
# ============================================
# For production, NEVER use "*"
# Specify exact domains that should access your API
# Format: comma-separated list of origins
ALLOWED_ORIGINS=https://myapp.com,https://www.myapp.com,https://admin.myapp.com

# ============================================
# User Service Configuration
# ============================================
USER_SERVICE_DATABASE_URL=postgresql://user:secure_password@prod-db-host:5432/user_service_db
USER_SERVICE_SECRET_KEY=your-production-secret-key-minimum-32-characters-long-and-secure
USER_SERVICE_DEBUG=False
USER_SERVICE_PORT=8001

# ============================================
# Product Service Configuration
# ============================================
PRODUCT_SERVICE_DATABASE_URL=postgresql://user:secure_password@prod-db-host:5432/product_service_db
PRODUCT_SERVICE_USER_SERVICE_URL=http://user-service:8001
PRODUCT_SERVICE_REDIS_HOST=redis-server
PRODUCT_SERVICE_REDIS_PASSWORD=secure_redis_password
PRODUCT_SERVICE_DEBUG=False
PRODUCT_SERVICE_PORT=8002

# ============================================
# Order Service Configuration
# ============================================
ORDER_SERVICE_DATABASE_URL=postgresql://user:secure_password@prod-db-host:5432/order_service_db
ORDER_SERVICE_USER_SERVICE_URL=http://user-service:8001
ORDER_SERVICE_PRODUCT_SERVICE_URL=http://product-service:8002
ORDER_SERVICE_RABBITMQ_HOST=rabbitmq-server
ORDER_SERVICE_RABBITMQ_USER=production_user
ORDER_SERVICE_RABBITMQ_PASSWORD=secure_rabbitmq_password
ORDER_SERVICE_DEBUG=False
ORDER_SERVICE_PORT=8003

# ============================================
# Notification Service Configuration
# ============================================
NOTIFICATION_SERVICE_RABBITMQ_HOST=rabbitmq-server
NOTIFICATION_SERVICE_RABBITMQ_USER=production_user
NOTIFICATION_SERVICE_RABBITMQ_PASSWORD=secure_rabbitmq_password
NOTIFICATION_SERVICE_DEBUG=False
NOTIFICATION_SERVICE_PORT=8004
